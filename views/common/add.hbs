
<div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
    <section class="mdc-card__primary">
        <h1 class="mdc-card__title mdc-card__title--large">Add {{ model }}</h1>
    </section>
</div>
    
<div class="mdc-layout-grid">
    <div class="row">
        <form class="col s12" action="/add/{{model}}" method="POST">
            {{#each fields}}
                <div class="row">
                    <div class="input-field col s12">
                        {{#ifeq this.type 'Text' }}
                            <input placeholder="Placeholder" id="{{@index}}" type="text" class="validate" name="{{@index}}"
                            required="{{this.required}}">
                        {{/ifeq}}
                        {{#ifeq this.type 'Email' }}
                            <input placeholder="Placeholder" id="{{@index}}" type="email" class="validate" name="{{@index}}"
                            required="{{this.required}}">
                        {{/ifeq}}
                        {{#ifeq this.type 'Textarea' }}
                            <textarea id="{{@index}}" class="materialize-textarea" name="{{@index}}" required="{{this.required}}"
                            data-length="300"></textarea>
                        {{/ifeq}} 
                        <label for="{{@index}}">{{this.label}}</label>
                    </div>
                </div>
            {{/each}}
            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
            <div class="row">
                <div class="col s12">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit <i
                            class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>